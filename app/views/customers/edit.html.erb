<div class="container">
 <div class="row">
  <h3 class="col-sm-3 bg-secondary text-center mt-5 mb-5">会員情報編集</h3>
 </div>
</div>

<%= form_with model:@customer, local:true do |f| %>
  <div class="container">
   <div class="row">
    <table class="col-sm-8">
     <tr>
      <th>会員ID</th>
      <th><%= @customer.id %></th>
     </tr>
     
     <tr>
      <th>氏名</th>
      <th><%= f.text_field :last_name %><%= f.text_field :first_name %></th>
     </tr>
     
     <tr>
      <th>フリガナ</th>
      <th><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></th>
     </tr>
     
     <tr>
      <th>郵便番号</th>
      <th><%= f.text_field :postal_code %></th>
     </tr>
     
     <tr>
      <th>住所</th>
      <th><%= f.text_area :address, class: "form-control" %></th>
     </tr>
     
     <tr>
      <th>電話番号</th>
      <th><%= f.text_field :telephone_number %></th>
     </tr>
     
     <tr>
      <th>メールアドレス</th>
      <th><%= f.text_field :email %></th>
     </tr>
     
    </table>
   </div>
  </div>
  
  <div class="container">
   <div class="row">
    <div class="col-sm-6 mx-auto">
     <table>
      <tr>
       <th><%= f.submit '変更を保存', class: "btn btn-success form-control" %></th>
       <th><%=link_to '退会する', check_path, class: "btn btn-danger form-control" %></th>
      </tr>
     </table>
    </div>
   </div>
  </div>
     
<% end %>