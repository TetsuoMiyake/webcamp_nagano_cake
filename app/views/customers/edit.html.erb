<div class="container">
 <div class="row">
  <h3 class="col-sm-4 bg-secondary text-center mt-5 mb-5"><%= @customer.full_name %>さんの会員情報編集</h3>
 </div>
</div>

<%= form_with model:@customer, local:true do |f| %>
  <div class="container">
   <div class="row">
    <table class="col-sm-8">
     <tr>
      <th>会員ID</th>
      <th><%= @customer.id %></th>
     </tr>
     
     <tr>
      <th>氏名</th>
      <th><%= f.text_field :last_name %><%= f.text_field :first_name %></th>
     </tr>
     
     <tr>
      <th>フリガナ</th>
      <th><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></th>
     </tr>
     
     <tr>
      <th>郵便番号</th>
      <th><%= f.text_area :postal_code, class: "form-control" %></th>
     </tr>
     
     <tr>
      <th>住所</th>
      <th><%= f.text_area :address, class: "form-control" %></th>
     </tr>
     
     <tr>
      <th>電話番号</th>
      <th><%= f.text_field :telephone_number, class: "form-control" %></th>
     </tr>
     
     <tr>
      <th>メールアドレス</th>
      <th><%= f.text_field :email, class: "form-control" %></th>
     </tr>
     
     <tr>
      <th>販売ステータス</th>
      <th>
       <%= f.radio_button :is_active, :true %>
       <%= f.label :is_active, "有効" %>
       <%= f.radio_button :is_active, :false %>
       <%= f.label :is_active, "退会" %>
      </th>
     </tr>
    </table>
   </div>
  </div>
  
  <div class="container">
   <div class="row">
    <div class="col-sm-2 mx-auto">
     <%= f.submit '変更を保存', class: "btn btn-success form-control" %>
    </div>
   </div>
  </div>
     
<% end %>