<div class="container">
 <div class="row">
   <h3 class="col-sm-3 bg-secondary text-center mt-5 mb-5">ログイン</h3>
 </div>
</div>

<div class="container">
 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>   
  <div class="row">
   <table class="col-sm-8 mx-auto">
      <tr class="field" height="70">
       <th><%= f.label :メールアドレス %></th>
       <th><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></th>
      </tr>

     <tr class="field">
      <th><%= f.label :パスワード %></th>
      <th><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></th>
     </tr>

     <tr class="actions" height="100">
       <th></th>
       <th><%= f.submit "ログイン", class: "btn btn-primary btn-block" %></th>
     </tr>
   </table>
  </div>
 <% end %>
</div>

<div class="container">
 <div class="row">
  <h3 class="col-sm-4 bg-secondary text-center mt-5 mb-5">既に登録済みの方</h3>
  <p><%= link_to "こちら", new_customer_registration_path %>からログインしてください。</p>
 </div>
</div>
