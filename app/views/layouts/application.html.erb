<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
     <nav class="navbar navbar-light">
       <div class="container">
         <div class="navbar-brand p-3">nagano_cake</div>
         <% if admin_signed_in? %>
           <li class="nav-item">
             <%= link_to "商品一覧", admin_items_path %>
           </li>
      
           <li class="nav-item">
             <%= link_to "会員一覧", customers_path %>
           </li>
      
           <li class="nav-item">
             <%= link_to "注文履歴一覧", order_details_path %>
           </li>
      
           <li class="nav-item">
             <%= link_to "ジャンル一覧", admin_genres_path %>
           </li>
      
           <li class="nav-item">
             <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
           </li>
         <% elsif customer_signed_in? %>
           <li class="nav-item">
             <%= link_to "商品一覧", items_path %>
           </li>
      
           <li class="nav-item">
             <%= link_to "会員一覧" %>
           </li>
      
           <li class="nav-item">
             <%= link_to "注文履歴一覧", order_details_path %>
           </li>
      
           <li class="nav-item">
             <%= link_to "ジャンル一覧", genres_path %>
           </li>
      
           <li class="nav-item">
             <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
           </li>
         <% else %>
       　   <li class="nav-item">
             <%= link_to "About" %>
           </li>
           <li class="nav-item">
             <%= link_to "商品一覧" %>
           </li>
           <li class="nav-item">
             <%= link_to "新規登録", new_admin_registration_path %>
           </li>
           <li class="nav-item">
             <%= link_to "ログイン", new_admin_session_path %>
           </li>
         <% end %>
       </div>
     </nav>
   </header>
   <%= yield %>
  </body>
</html>
