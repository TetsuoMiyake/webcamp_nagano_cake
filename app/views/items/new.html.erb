<div class="container">
 <div class="row">
  <h3 class="col-sm-3 bg-secondary text-center mt-5 mb-5">商品新規登録</h3>
 </div>
</div>

<%= form_with model:@item, local:true do |f| %>
  <div class="container">
   <div class="row">
    <table class="col-sm-8">
     <tr>
      <th for="inputImage", class="form-control-file">商品画像</th>
      <th><%= f.attachment_field :image, placeholder: "商品画像" %></th>
     </tr>
     
     <tr>
      <th>商品名</th>
      <th><%= f.text_field :name, class: "form-control" %></th>
     </tr>
     
     <tr>
      <th>商品説明</th>
      <th><%= f.text_area :introduction, class: "form-control" %></th>
     </tr>
     
     <tr>
      <th>ジャンル</th>
      <th><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %></th>
     </tr>
     
     <tr>
      <th>税込価格</th>
      <th><%= f.text_field :price, class: "form-control" %></th>
     </tr>
     
     <tr>
      <th>販売ステータス</th>
      <th>
       <%= f.radio_button :is_active, :true %>
       <%= f.label :is_active, "販売中" %>
       <%= f.radio_button :is_active, :false %>
       <%= f.label :is_active, "販売停止中" %>
      </th>
     </tr>
    </table>
   </div>
  </div>

  <div class="container">
   <div class="row">
    <div class="col-sm-2 mx-auto">
     <%= f.submit '新規登録', class: "btn btn-success form-control" %>
    </div>
   </div>
  </div>
     
<% end %>