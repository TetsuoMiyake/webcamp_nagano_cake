<div class="container">
 <div class="row">
  <h3 class="col-sm-3 bg-secondary text-center mt-5 mb-5">商品一覧</h3>
  <%= link_to "新規登録", new_item_path %>
 </div>
</div>

<div class="container">
  <div class="row">
   <div class="col-sm-10">
    <table class="table">
     <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
     </thead>
    
     <tbody>
      <% @items.each do |item| %>
       <tr>
        <th><%= item.id %></th>
        <th><%= item.name %></th>
        <th><%= item.price %></th>
        <th><%= item.genre.name %></th>
        <% if item.is_active == true %>
         <th>販売中</th> 
        <% else %>
         <th>販売停止中</th>
        <% end %>
       </tr>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>