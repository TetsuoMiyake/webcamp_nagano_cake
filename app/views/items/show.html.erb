<div class="container">
 <div class="row">
  <h3 class="col-sm-3 bg-secondary text-center mt-5 mb-5">商品詳細</h3>
 </div>
</div>

<%= attachment_image_tag @item, :image, :fill, 100, 100 %>

<div class="container">
   <div class="row">
    <table class="col-sm-8">
     <tr>
      <th>商品名</th>
      <th><%= @item.name %></th>
     </tr>
     
     <tr>
      <th>商品説明</th>
      <th><%= @item.introduction %></th>
     </tr>
     
     <tr>
      <th>ジャンル</th>
      <th><%= @item.genre.name %></th>
     </tr>
     
     <tr>
      <th>税込価格</th>
      <th><%= @item.price * 1.1 %>(<%= @item.price %>)円</th>
     </tr>
     
     <tr>
      <th>販売ステータス</th>
      <% if @item.is_active == true %>
        <th>販売中</th> 
      <% else %>
        <th>販売停止中</th>
      <% end %>
     </tr>
    </table>
   </div>
  </div>
  
  <div class="container">
   <div class="row">
    <div class="col-sm-2 mx-auto">
     <%= link_to "編集する", edit_item_path(@item.id) %>
    </div>
   </div>
  </div>